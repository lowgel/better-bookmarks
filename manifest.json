{
  "manifest_version": 2,
  "name": "better bookmarks",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage"
  ],

  "description": "Organization tool that saves entire tab configurations and restores them on command.",
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/tabset-icon.png"
  }
}
  

